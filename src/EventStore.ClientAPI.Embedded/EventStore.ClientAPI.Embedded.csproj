<Project Sdk="Microsoft.NET.Sdk">
  <Import Project="..\..\common\EsVersion.props" />
  
  <PropertyGroup>
    <TargetFrameworks>net461;net451</TargetFrameworks>
    <RootNamespace>EventStore.ClientAPI.Embedded</RootNamespace>
    <AssemblyName>EventStore.ClientAPI.Embedded</AssemblyName>
    <AllowUnsafeBlocks>false</AllowUnsafeBlocks>
  </PropertyGroup>

  <PropertyGroup Label="NuGet">
    <PackageId>EventStore.Client.Embedded.Unofficial</PackageId>
    <Title>EventStore.Client.Embedded.Unofficial</Title>
    <Description>EventStore.ClientAPI.Embedded</Description>
    <PackageTags>eventstore</PackageTags>
  </PropertyGroup>

  <ItemGroup Condition="'$(TargetFramework)' == 'net461' or '$(TargetFramework)' == 'net451'">
    <Reference Include="System" />
    <Reference Include="Microsoft.CSharp" />
  </ItemGroup>

  <ItemGroup>
    <Compile Include="..\..\common\CommonAssemblyInfo.cs" Link="Properties\CommonAssemblyInfo.cs" />
    <Compile Include="..\..\common\CommonVersionInfo.cs" Link="Properties\CommonVersionInfo.cs" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\EventStore.ClientAPI\EventStore.ClientAPI.csproj" />
    <ProjectReference Include="..\EventStore.Projections.Core\EventStore.Projections.Core.csproj" />
  </ItemGroup>
</Project>
