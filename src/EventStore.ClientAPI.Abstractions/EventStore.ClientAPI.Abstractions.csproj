<Project Sdk="Microsoft.NET.Sdk">
  <Import Project="..\..\common\EsClientVersion.props" />
  
  <PropertyGroup>
    <TargetFrameworks>net461;net451</TargetFrameworks>
    <RootNamespace>EventStore.ClientAPI</RootNamespace>
    <AssemblyName>EventStore.ClientAPI.Abstractions</AssemblyName>
    <AllowUnsafeBlocks>false</AllowUnsafeBlocks>
  </PropertyGroup>

  <PropertyGroup>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
    <PackageRequireLicenseAcceptance>False</PackageRequireLicenseAcceptance>
  </PropertyGroup>
  
  <PropertyGroup Label="NuGet">
    <PackageId>EventStore.ClientAPI.Abstractions</PackageId>
    <Title>EventStore.ClientAPI.Abstractions</Title>
    <Description>EventStore.ClientAPI.Abstractions</Description>
    <PackageTags>eventstore client queue</PackageTags>
    <IsPackable>true</IsPackable>
    <Authors>Seabiscuit</Authors>
    <Copyright>Copyright 2017 Seabiscuit</Copyright>
    <PublicSign Condition=" '$(OS)' != 'Windows_NT' ">true</PublicSign>
    <PackageIconUrl>http://go.microsoft.com/fwlink/?LinkID=288859</PackageIconUrl>
    <PackageProjectUrl>https://github.com/cuteant/eventstore</PackageProjectUrl>
    <PackageLicenseUrl>http://www.apache.org/licenses/LICENSE-2.0</PackageLicenseUrl>
    <RepositoryType>git</RepositoryType>
    <RepositoryUrl>https://github.com/cuteant/eventstore</RepositoryUrl>
    <NeutralLanguage>en-US</NeutralLanguage>
  </PropertyGroup>

  <ItemGroup Condition="'$(TargetFramework)' == 'net461' or '$(TargetFramework)' == 'net451'">
    <Reference Include="System" />
    <Reference Include="Microsoft.CSharp" />
  </ItemGroup>
  
  <ItemGroup>
    <Compile Include="..\..\common\CommonVersionInfo.cs" Link="Properties\CommonVersionInfo.cs" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="CuteAnt" Version="2.0.0-rtm-170601" />
  </ItemGroup>

  <ItemGroup>
    <Folder Include="AutoSubscribe\" />
  </ItemGroup>
</Project>
